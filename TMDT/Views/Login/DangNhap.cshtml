
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LanAnh.cshtml";
}


<div class="login__form">
    <h1>Đăng nhập</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            @Html.TextBox("Email", null, new { @class = "form-control", type = "email", id = "exampleInputEmail1", placeholder = "Email" })
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mật Khẩu</label>
            @Html.TextBox("Password", null, new { @class = "form-control", type = "password", id = "exampleInputPassword1", placeholder = "Mật khẩu" })
        </div>
            <p><span style="color:red">@ViewData["Err"]</span></p>
            <button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>
    }
    <div class="forgot__pw"><a href="@Url.Action("DangKyKhachHang", "RegisterAccount")">Bạn chưa có tài khoản</a></div>
    <div class="forgot__pw"><a href="@Url.Action("QuenMatKhau", "Login")">Quên mật khẩu ?</a></div>
</div>




