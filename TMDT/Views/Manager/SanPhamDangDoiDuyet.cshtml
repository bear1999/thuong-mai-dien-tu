@model IEnumerable<TMDT.Models._FullProduct>
@{
    ViewBag.Title = "Sản phẩm đang đợi duyệt";
    Layout = "~/Views/Shared/_Dashboard_1.cshtml";
    var money = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@section styles {
    <link rel="stylesheet" href="~/Assets/_Apartment/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
@section scripts {
    <script src="~/Assets/_Apartment/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/_Apartment/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({ "lengthMenu": [[10, 25, 50, 150, 200], [10, 25, 50, 150, 200]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1
        });
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Sản phẩm đang đợi duyệt</h1>
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><span style="color:red"><b>Danh sách sản phẩm</b></span></h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-2">
                        <table id="example1" class="table table-bordered table-striped text-nowrap">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>STT</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Ngày đăng</th>
                                    <th>Loại sản phẩm</th>
                                    <th>Người đăng</th>
                                    <th>Hình 1</th>
                                    <th>Hình 2</th>
                                    <th>Hình 3</th>
                                    <th>Hình 4</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 0; }
                                @foreach (var kh in Model)
                                {
                                    i++;
                                    <tr>
                                        <td><a href="@Url.Action("DuyetSanPham", "Manager", new { id = kh.idProduct })"><i onclick="return confirm('Bạn có chắc muốn duyệt bài đăng này ?')">Duyệt</i></a></td>
                                        <td>@i</td>
                                        <td>@Html.DisplayFor(a => kh.nameProduct)</td>
                                        <td>@String.Format(money, "{0:c0}", kh.priceProduct)</td>
                                        <td>@Html.DisplayFor(a => kh.amountProduct)</td>
                                        <td>@Html.DisplayFor(a => kh.datePost)</td>
                                        <td>@Html.DisplayFor(a => kh.nameCategory)</td>
                                        <td>@Html.DisplayFor(a => kh.Fullname)</td>
                                        <td><img src="~/Assets/ImageProduct/@kh.imageProduct_1" style="width: 100px; height: 100px;" /></td>
                                        <td><img src="~/Assets/ImageProduct/@kh.imageProduct_2" style="width: 100px; height: 100px;" /></td>
                                        <td><img src="~/Assets/ImageProduct/@kh.imageProduct_3" style="width: 100px; height: 100px;" /></td>
                                        <td><img src="~/Assets/ImageProduct/@kh.imageProduct_4" style="width: 100px; height: 100px;" /></td>
                                        <td><a href="@Url.Action("TuChoiSanPham", "Manager", new { id = kh.idProduct })"><i onclick="return confirm('Bạn có chắc muốn từ chối bài đăng này ?')">Từ chối</i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- End Main content -->
</div>



