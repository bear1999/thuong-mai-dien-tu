
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Xác thực OTP</title>
    <link rel="shortcut icon" type="image/png" href="~/Assets/_Apartment/dist/img/favicon.jpg" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/_Apartment/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Assets/_Apartment/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="~/Assets/_Apartment/dist/css/fonts/fonts.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/_Apartment/dist/css/hide-arrow-number.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>ChoDoCu</b>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Nhập mã OTP</p>
                <p><span style="color:red">@ViewData["Err"]</span></p>
                <p><span style="color:black">@ViewData["Err1"]</span></p>
                @using (Html.BeginForm("DoiMatKhau", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="input-group mb-3">
                        <input type="number" class="form-control" placeholder="Mã OTP" name="GetOTP">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-qrcode"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Mật khẩu" name="MatKhau1">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Nhập lại mật khẩu" name="MatKhau2">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Đổi mật khẩu</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
                <p class="mt-3 mb-1">
                    <a href="@Url.Action("DangNhap", "Login")">Đăng nhập</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Assets/_Apartment/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Assets/_Apartment/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Assets/_Apartment/dist/js/adminlte.min.js"></script>
</body>
</html>
